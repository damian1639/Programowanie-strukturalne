#include<stdio.h>

int zsumuj(int x)
{
    static int suma=0;
    suma=suma+x;
    printf("te funkcje wywolano %d razy\n",suma);
    return x;

}

int main()
{
    zsumuj(5);
    zsumuj(3);
    zsumuj(8);
    zsumuj(2);
    zsumuj(1);
}

#include<stdio.h>

int silnia (int n)
{
    static int suma=0;
   if(n==0)
   {
       return 1;
   }
   return n*silnia(n-1);
}

int main()
{
   printf("%d\n",silnia(6));
   printf("%d\n",silnia(0));
}
